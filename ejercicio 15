#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int** generartablas(int N, int K);

int main() {
    int N, K;
    cout << "Pon Valor N: ";
    cin >> N;
    while (N <= 10) {
        cout << "N deber ser mas grande que 10. \n";
        cout << "ingrese un dato correcto";
        cin >> N;

    }
    cout << "Pon valor k: ";
    cin >> K;
    int** tables = generartablas(N, K);
    for (int i = 0; i < K; i++) {
        int size = tables[i][0];
        cout << "Lista " << i + 1 << " de tamaÃ±o " << size << ": ";
        for (int j = 1; j <= size; j++) {
            cout << tables[i][j] << " ";
        }
        cout << endl;
    }
    // limpiar memoria
    for (int i = 0; i < K; i++) {
        delete[] tables[i];
    }
    delete[] tables;
    return 0;
}

int** generartablas(int N, int K) {
    int** tables = new int*[K];
    srand(time(NULL));
    for (int i = 0; i < K; i++) {
        int size = rand() % (N - 9) + 10; 
        tables[i] = new int[size + 1];
        tables[i][0] = size; 
        for (int j = 1; j <= size; j++) {
            tables[i][j] = rand() % 1001; 
        }
    }
    return tables;
}
